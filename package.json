{
  "name": "lep",
  "version": "1.0.0",
  "description": "based on electron.js video player",
  "homepage": "./",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"npm run electron-wait\"",
    "start-react": "cross-env PUBLIC_URL=. react-app-rewired start",
    "electron-wait": "wait-on tcp:3000 && electron . --devServerUrl=http://localhost:3000",
    "start-electron": "electron . --devServerUrl=http://localhost:3000",
    "build": "react-app-rewired build",
    "package": "npm run build && electron-builder build --win --mac --linux",
    "debug": "electron --inspect-brk=5858 .",
    "generate-icons": "node scripts/generate-electron-icons.js"
  },
  "author": "adam gao",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "better-sqlite3": "^11.10.0",
    "bootstrap": "^5.3.5",
    "electron-log": "^5.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "subtitle": "^4.2.2-alpha.0",
    "tesseract.js": "^6.0.1",
    "video.js": "^8.22.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": null,
    "appId": "com.mlcore-engine.lep",
    "productName": "lep",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "main/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "extraFiles": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg/bin",
        "to": "bin"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3",
      "node_modules/ffmpeg-static",
      "node_modules/tesseract.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "darkModeSupport": true,
      "notarize": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": [
        "adam gao"
      ],
      "signAndEditExecutable": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "icon": "assets/icon-512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "lep",
      "displayLanguageSelector": true,
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "autoUpdate": {
    "enabled": true,
    "checkFrequency": "daily",
    "updateFrequency": "daily",
    "autoDownload": true,
    "autoInstall": true,
    "autoNotify": true
  }
}
